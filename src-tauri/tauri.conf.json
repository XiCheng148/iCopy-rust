{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "pnpm run serve:tauri",
    "distDir": "../dist"
  },
  "package": {
    "productName": "iCopy"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.ico"
    },
    "allowlist": {
      "all": false,
      "dialog": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "window": {
        "setSize": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.dev.clipboard",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": [
            "zh-CN"
          ]
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "decorations": false,
        "transparent": true,
        "fullscreen": false,
        "height": 500,
        "resizable": true,
        "title": "ICopy",
        "width": 350,
        "x": 0,
        "y": 0
      }
    ]
  }
}
